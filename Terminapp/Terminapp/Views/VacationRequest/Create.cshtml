@model Terminapp.Models.VacationRequest

@{
    ViewData["Title"] = "Opprett ny ferieforesp√∏rsel";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label">Ansatt</label>
        <select asp-for="EmployeeId" asp-items="ViewBag.EmployeeId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Startdato</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">Sluttdato</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Kommentar</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>

    <input type="submit" value="Lagre" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>